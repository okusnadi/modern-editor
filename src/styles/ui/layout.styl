.app-layout
  height 100vh
  overflow hidden
  cursor default
  .app-topbar
    height 48px
    line-height 48px
    text-align center
    background-color $color-2
    flex 0 0 auto
  .app-leftnav
    display flex
    flex-flow column
    height 100%
    .app-leftnav-header
      padding-left 56px
      line-height 48px
      flex 0 0 48px
    .app-tab-container
      flex 1 1 auto
      overflow-y auto
    .app-toolbar
      flex 0 0 auto
    .win-commandingsurface .win-commandingsurface-actionarea, .win-commandingsurface .win-commandingsurface-overflowarea
      background-color $color-4
    .app-tab
      display flex
      .app-tab-content
        padding-right 0
        flex 1 1 auto
      .app-tab-close-button
        height 48px
        width 48px
        line-height 48px
        margin 0
        text-align center
        z-index 2
        flex 0 0 auto
        &:hover, &:focus
          background-color $color-3
          color $color-reverse-1
  .app-menu-button
    position absolute
    top 0
    left 0
    z-index 10000
  .app-content
    height 100vh
    width 100%
