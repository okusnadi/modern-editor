.app-settings-page
  border-top $color-2 1px solid
  height 100%
  display flex
  flex-flow column
  .app-page-content
    padding 0
    box-sizing border-box
    overflow-y auto
    flex 1 1 auto
  .app-color-item
    box-sizing border-box
    height 36px
    width 36px
    border-radius 18px
    margin-right 8px
    display inline-block
  .active
     border 3px solid $color-reverse-1
